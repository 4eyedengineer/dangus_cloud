# Local development secrets
# Copy to .env and fill in values

# Kubernetes token for k3s API access
# Generate with: kubectl create token dangus-backend -n dangus-cloud --duration=8760h
KUBERNETES_TOKEN=

# GitHub OAuth - Create a separate OAuth App for local dev
# GitHub Settings > Developer settings > OAuth Apps > New OAuth App
# Callback URL: http://192.168.1.124:3001/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Encryption key for storing GitHub tokens (required for OAuth)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Session secret for cookie signing (required for OAuth)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# Harbor credentials (optional - only needed if pushing images)
HARBOR_ROBOT_USER=
HARBOR_ROBOT_PASSWORD=
